<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity2">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.MaterialComponents"
            app:contentScrim="@color/abie_firozei"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/imgDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/mohsenchavoshi"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarAsli"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:layout_collapseMode="pin" />


        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_gravity="end"
                android:id="@+id/txt_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="محسن چاوشی"
                android:textColor="@color/blacklight"
                android:textSize="30sp"
                android:textStyle="italic" />

            <TextView
                android:layout_gravity="end"
                android:id="@+id/txt_detail_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="خواننده موسیقی پاپ"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_gravity="end"
                android:layout_width="152dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray" />

            <TextView
                android:layout_gravity="end"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp"
                android:ellipsize="end"
                android:id="@+id/txt_detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="محسن چاوشی پس از دریافت فوق دیپلم حسابداری و اتمام دوره سربازی، فعالیت حرفه‌ای خود را در زمینهٔ موسیقی در سال ۱۳۸۲ با آلبوم نفرین آغاز کرد و پس از اخذ مجوز در سال ۱۳۸۷ آلبوم یه شاخه نیلوفر را منتشر کرد. از وی تاکنون بیش از ۲۰۰ قطعه موسیقی شنیده شده‌است، که شامل ۱۱ آلبوم و نیز چندین تک‌آهنگ است.[۱۰]

وی خواننده و آهنگساز ترانه‌های فیلم سینمایی سنتوری ساختهٔ داریوش مهرجویی بود. چاوشی همچنین یک قطعه برای تیتراژ پایانی فیلم سینمایی لامپ ۱۰۰ به کارگردانی سعید آقاخانی خواند.

چاوشی خواننده ترانه‌های سریال شبکه خانگی شهرزاد ساختهٔ حسن فتحی می‌باشد که این ترانه‌ها خصوصاً تک‌آهنگ کجایی نقش بسزایی در محبوبیت او داشت.[۱۱][۱۲]

محسن چاوشی دربارهٔ نحوهٔ ضبط صدایش برای آهنگ‌های فیلم سنتوری می‌گوید: «چاره‌ای جز این نداشتم که در خانه و در یکی از اتاق‌هایمان کار ضبط را انجام بدهم. به کمک مادرم یک پتو را با میخ به جلوی پنجره زدیم و دیوارها را هم با پتو پوشانیدم تا صدا نپیچد. مادرم از اتاق بیرون رفت و با یک پتو از بیرون، در اتاق را پوشاند. خودم هم از این طرف در، یک پتو آویزان کردم تا بتوانم در نهایت فضایی را در اختیار داشته باشم که در آن بشود وکال گرفت. بعد از همه این ماجراها، پتو را کشیدم روی سرم و در همان شرایط خواندم و همه وکال را ضبط کردم. از زیر پتو که بیرون آمدم، علی سنتوری به دنیا آمده بود. همان نسخه هم نهایی شد و پخش شد».[۱۳]"

                android:textColor="@color/blacklight" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        app:itemIconTint="@drawable/bottom_nav_selector"
        android:id="@+id/fab_detail_open_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clickweb"
        android:backgroundTint="@color/abie_dark"
        app:tint="@color/white"
        app:layout_anchor="@id/appBarMain"
        app:layout_anchorGravity="bottom|start"
        app:useCompatPadding="true" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>



