<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/rounded_corner"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/title_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your desire title"
            android:textSize="24sp"
            android:textColor="@color/abie_firozei"/>

        <TextView
            android:id="@+id/subtitle_dialog_subtitle"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/abie_dark"
            android:layout_marginTop="10dp"
            android:text="Your desire text"/>

        <Button
            android:id="@+id/dialogDismiss_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:textColor="@color/white"
            android:text="بله صفحه را ببند"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@drawable/shape_radiusaks"/>
    </LinearLayout>
</RelativeLayout>