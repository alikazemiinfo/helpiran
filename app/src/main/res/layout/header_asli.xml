<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:background="?attr/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_main_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/yekanbold"
        android:text="سرویس کمک رسان ایرانی"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_main_asli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:fontFamily="@font/sansbold"
        android:text="HELP IRAN"

        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_main_title2"
        app:layout_constraintEnd_toEndOf="@+id/txt_main_title2" />

    <ImageView


        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_logo_hepiran"
        app:layout_constraintBottom_toTopOf="@+id/txt_main_asli"
        app:layout_constraintEnd_toEndOf="@+id/txt_main_asli" />
</androidx.constraintlayout.widget.ConstraintLayout>