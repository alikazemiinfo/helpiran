<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Helpiran" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/abie_firozei</item>
        <item name="colorPrimaryVariant">@color/abie_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sorati_ghermez</item>
        <item name="colorSecondaryVariant">@color/sorati_ghermez</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->

        <item name="colorAccent">#FFF</item>
        <item name="colorSurface">#EFEFEF</item>
        <item name="colorOnSurface">#757575</item>
    </style>


<!--    custumize tool bar (ham baray light ham night)-->
    <style name="customizetoolbar" parent="Theme.MaterialComponents">
        <item name="fontFamily">@font/productsansbold</item>
        <item name="android:textSize">26sp</item>


    </style>


</resources>